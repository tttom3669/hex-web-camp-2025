	import Swiper from 'swiper'
	import { Navigation, Pagination } from 'swiper/modules'
	const swiper = new Swiper('.blog-swiper', {
		modules: [Navigation, Pagination],
		navigation: {
			nextEl: '.blog-swiper-container .swiper-button-next',
			prevEl: '.blog-swiper-container .swiper-button-prev'
		},
		slidesPerView: 1,
		spaceBetween: 12,
		breakpoints: {
			768: {
				slidesPerView: 2,
				spaceBetween: 24
			},
			1200: {
				slidesPerView: 3,
				spaceBetween: 24
			}
		},
		on: {
			slideChangeTransitionEnd: function ({ isEnd, isBeginning }) {
				const btnNext = document.querySelector('.blog-swiper-container .swiper-button-next')
				const btnPrev = document.querySelector('.blog-swiper-container .swiper-button-prev')
				if (isEnd) {
					btnNext?.classList.add('is-disabled')
				} else {
					btnNext?.classList.remove('is-disabled')
				}
				if (isBeginning) {
					btnPrev?.classList.add('is-disabled')
				} else {
					btnPrev?.classList.remove('is-disabled')
				}
			}
		}
	})
</script>
